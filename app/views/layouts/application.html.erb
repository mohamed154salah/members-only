<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
<nav class="navbar navbar-light  navbar-expand-lg bg-body-tertiary" style="background-color: #e3f2fd;">
    <div class="container-fluid">
       <%=link_to "Members Only" ,root_path ,:class=>"navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%=link_to "Posts" ,root_path ,:class=>"nav-link active" %>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 ">
      <% if user_signed_in?  %>
            <li class="nav-item navbar-brand">
            <span class="navbar-brand mb-0 h1"><%=current_user.email%></span>

            </li>
            <li class="nav-item">
              <%=button_to "Sign Out",destroy_user_session_path,method: :delete ,:class=>"btn btn-danger"%>
            </li>
          <%else %>
            <li class="nav-item">
              <%=link_to "Sign In" ,new_user_session_path  ,:class=>"nav-link"%>
            </li>

            <li class="nav-item">
              <%=link_to "Sign Up" ,new_user_registration_path ,:class=>"nav-link" %>
            </li>

          <%end%>
        </ul>
      </div>
    </div>
  </nav>
  <%= yield %>
  <p class="notice alert alert-primary" role="alert"> <%=notice%></p>
  <p class="alert alert alert-warning" role="alert"> <%=alert%></p>
  </body>
</html>
